<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_widget_parent"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/iv_widget_image"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:contentDescription="@string/widget_image"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tv_widget_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_widget_image"
        android:background="@android:color/white"
        android:padding="@dimen/widget_margin"
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/text14"
        tools:text="Trump gets dumped by hooker" />

    <TextView
        android:id="@+id/tv_widget_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_widget_title"
        android:background="@android:color/white"
        android:fontFamily="@font/montserrat_regular"
        android:paddingBottom="@dimen/widget_margin"
        android:paddingEnd="@dimen/widget_margin"
        android:paddingStart="@dimen/widget_margin"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text12"
        tools:text="30 May 2018" />

</RelativeLayout>