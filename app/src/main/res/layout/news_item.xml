<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="?android:attr/selectableItemBackground">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_news_item_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_news_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/text14"
            app:fontFamily="@font/montserrat_medium"
            app:layout_constraintTop_toBottomOf="@+id/iv_news_item_image"
            tools:text="Trump gets dumped by hooker" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_news_item_publishedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat_light"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/text12"
            app:fontFamily="@font/montserrat_light"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_news_item_title"
            tools:text="20 Mar 2018" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_news_item_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text12"
            app:fontFamily="@font/montserrat_regular"
            app:layout_constraintLeft_toLeftOf="@+id/tv_news_item_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_news_item_title"
            tools:text="Thestreet.com" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>